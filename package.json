{
  "name": "mono-ts-apicalypse",
  "private": true,
  "type": "module",
  "workspaces": [
    "ts-apicalypse",
    "ts-igdb"
  ],
  "scripts": {
    "test": "jest",
    "clean": "rimraf \"ts-apicalypse/dist\" \"ts-igdb/dist\" \"**/*.tsbuildinfo\"",
    "compile": "pnpm run clean && pnpm run -r build",
    "build": "pnpm run compile && pnpm run test",
    "version": "./scripts/version.sh && pnpm i",
    "publish": "pnpm run build && pnpm run version && pnpm publish -r"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "jest": "^29.6.1",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.6"
  }
}
